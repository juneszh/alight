{
    "name": "juneszh/alight",
    "description": "Alight is a light-weight framework for PHP. Easily and quickly build high performance RESTful web applications.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "lightweight",
        "framework",
        "restful",
        "fast-route",
        "medoo",
        "simplecache",
        "psr-16",
        "monolog",
        "whoops",
        "job-scheduler"
    ],
    "authors": [
        {
            "name": "June So",
            "email": "alight@juneszh.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Alight\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.4",
        "nikic/fast-route": "^1.3",
        "catfan/medoo": "^2.1",
        "symfony/cache": "^5.4",
        "psr/simple-cache": "^1.0",
        "monolog/monolog": "^2.7",
        "filp/whoops": "^2.14"
    }
}
